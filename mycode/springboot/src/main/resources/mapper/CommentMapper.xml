<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.springboot.dao.CommentDao">


    <select id="findBySearch" resultType="com.example.springboot.entity.Comment">
        select `comment`.*  from `comment`


        where 1 = 1
        <if test="search != null and search.title != null and search.title != ''">
            and `comment`.`title` like concat ('%', #{search.title}, '%')
        </if>
        <if test="userId != null">
            and `comment`.`userId` = #{userId}
        </if>
        <if test="role != null and role == 2">
            and `comment`.`role` = #{role}
        </if>

    </select>

</mapper>