<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.springboot.dao.GradeDao">


    <select id="findBySearch" resultType="com.example.springboot.entity.Grade">
        select `grade`.* from `grade`

        where 1 = 1
        <if test="search != null and search.gradeName != null and search.gradeName != ''">
            and `grade`.`gradeName` like concat ('%', #{search.gradeName}, '%')
        </if>

    </select>

</mapper>